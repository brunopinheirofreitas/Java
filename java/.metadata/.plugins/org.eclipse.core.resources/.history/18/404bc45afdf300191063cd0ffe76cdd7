
public class TestaReferencias {
	public static void main(String[] args) {
		
		Funcionario g1 = new Gerente(); //Criando um novo objeto Funcionario com instanciamento da classe gerente.
		g1.setNome("Marcos");			//Esse objeto possui duas referências, uma na classe Funcionario e outra na classe Gerente.
		String nome = g1.getNome();
		g1.autentica(2222);
		
		System.out.println(nome);
	}

}
