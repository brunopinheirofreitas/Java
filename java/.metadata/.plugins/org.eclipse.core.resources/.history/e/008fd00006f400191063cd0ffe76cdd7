
public class TestaReferencias {
	public static void main(String[] args) {
		
		Gerente g1 = new Gerente(); //Criando um novo objeto Funcionario com instanciamento da classe gerente.
		g1.setNome("Marcos");			//Esse objeto possui duas referências, uma na classe Funcionario e outra na classe Gerente.
		g1.setTipo(1);
		String nome = g1.getNome();
		System.out.println(nome);
		g1.setSalario(5000.0);
		System.out.println(g1.getTipo());
		
		Funcionario f1 = new Funcionario();
		f1.setNome("Jose");
		f1.setSalario(2000.0);
		
		EditorVideo e1 = new EditorVideo();
		e1.setNome("Joaquim");
		e1.setTipo(3);
		e1.setSalario(2500.0);
		
		ControleBonificacao controle = new ControleBonificacao();
		controle.registra(g1);
		controle.registra(f1);
		controle.registra(e1);
		
		System.out.println(controle.getSoma());
		

		
		
	}

}
